@model BookManager.Context.Book

@{
    ViewBag.Title = "Add Book";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .error {

        color:red;
    }


</style>

<h2>Add Book</h2>

@using (Html.BeginForm("AddBook", "Book", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="container">

    @* Title Field *@
    <div class="form-group">
        <label>Title</label>
        @Html.ValidationMessageFor(x => x.Title, "", new { @class = "error" })
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    </div>
       
        

    @* Author Field *@
    <div class="form-group">
        <label>Author</label>
        @Html.TextBoxFor(x => x.Author, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Author, "", new { @class = "error" })
    </div>

    @* Price Field *@
    <div class="form-group">
        <label>Price</label>
        @Html.TextBoxFor(x => x.Price, new { @class = "form-control", type = "number", step = "0.01" })
        @Html.ValidationMessageFor(x => x.Price, "", new { @class = "error" })
    </div>

    @* Published Date Field *@
    <div class="form-group">
        <label>Published Date</label>
        @Html.TextBoxFor(x => x.PublishedDate, new { @class = "form-control", type = "date" })
        @Html.ValidationMessageFor(x => x.PublishedDate, "", new { @class = "error" })
    </div>

    <button type="submit" class="btn btn-primary">Add Book</button>
    <button type="submit" class="btn btn-primary">Reset</button>
</div>
}
